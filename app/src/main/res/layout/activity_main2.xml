<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Main2Activity">


    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text=" Your Balance: "
        android:textColor="#9d0a01"
        android:textStyle="bold"/>



    <TextView
        android:id="@+id/tv1111"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    <EditText
        android:id="@+id/et4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Add Balance"
        android:inputType="number" />


    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/custom_button"
        android:orientation="horizontal"
        android:text="ADD Balance"
        android:textColor="#ba160c"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv0"
        android:layout_width="match_parent"
        android:layout_height="5dp" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="153dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et1"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:hint="Type" />





    <EditText
        android:id="@+id/et3"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:hint="Cost"
        android:inputType="number" />

    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:text="Subtract expense"
        android:textColor="#ba160c"
        android:textStyle="bold"/>



    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="20dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/gotoexpense"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textColor="#ba160c"
            android:text="expense Details"
            android:background="@drawable/custom_button"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/gotobalance"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_button"
            android:text=" balance details"
            android:textColor="#ba160c"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/tt"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <ListView
            android:id="@+id/tv"
            android:layout_width="190dp"
            android:layout_height="50dp"

            />

        <ListView
            android:id="@+id/tvB"
            android:layout_width="190dp"
            android:layout_height="50dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv1112"
            android:layout_width="300dp"
            android:layout_height="50dp" />



    <Button
        android:id="@+id/outbttn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_button_2"
        android:gravity="center"
        android:text="log out"
        android:textColor="#ba160c"
         />
        </LinearLayout>

    <Button
        android:id="@+id/btngraph"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_button_2"
        android:gravity="center"
        android:text="graph"
        android:textColor="#ba160c"
        />
    <Button
        android:id="@+id/v"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_button_2"
        android:gravity="center"
        android:text="view"
        android:textColor="#ba160c"
        />


</LinearLayout>